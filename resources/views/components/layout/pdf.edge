<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Helvetica', 'Arial', sans-serif;
        font-size: 10pt;
        line-height: 1.6;
        color: #333;
      }
      
      .w-full {
        width: 100%;
      }
      
      .flex {
        display: flex;
      }
      
      .items-center {
        align-items: center;
      }
      
      .justify-between {
        justify-content: space-between;
      }
      
      .text-right {
        text-align: right;
      }
      
      .bold {
        font-weight: bold;
      }
      
      .header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        page-break-inside: avoid;
        break-inside: avoid;
      }
      
      .quote-title {
        font-size: 22pt;
        font-weight: bold;
        color: #2c3e50;
        text-transform: uppercase;
        letter-spacing: 1px;
      }
      
      .text-center {
        text-align: center;
      }
      
      .text-start {
        text-align: start;
      }
      
      .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        margin-bottom: 15px;
        border: 1px solid #dee2e6;
      }
      
      .table thead {
        background-color: #2c3e50;
        color: white;
      }
      
      .table thead th {
        padding: 4px 6px;
        font-weight: bold;
        font-size: 10pt;
      }
      
      .table tbody td {
        padding: 4px 6px;
        border-bottom: 1px solid #e9ecef;
      }
      
      .table tbody tr:last-child td {
        border-bottom: none;
      }
      
      .table tbody tr.total-row td {
        padding: 4px 6px;
        font-weight: bold;
        border-bottom: 1px solid #dee2e6;
      }
      
      .table tbody tr.grand-total {
        background-color: #f8f9fa;
      }
      
      .table tbody tr.grand-total td {
        padding: 5px 6px;
        font-weight: bold;
        font-size: 10pt;
      }
      
      ul {
        list-style: inside;
        margin-left: 20px;
      }
      
      .price-column {
        width: 120px;
      }
      
      .price-mobile {
        display: none;
        font-weight: bold;
      }
      
      @media (max-width: 620px) {
        .price-column {
          display: none;
        }
      
        .price-mobile {
          display: block;
        }
      }
    </style>
  </head>
  <body>
    {{{ await $slots.main() }}}
  </body>
</html>
